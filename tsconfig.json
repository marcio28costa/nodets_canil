{
  "compilerOptions": {
    /* Diretórios */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Compatibilidade com Node.js */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Integração com bibliotecas */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Tipagem e segurança */
    "strict": true,
    "skipLibCheck": true,

    /* Geração de mapas e declarações */
    "sourceMap": true,
    "declaration": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
